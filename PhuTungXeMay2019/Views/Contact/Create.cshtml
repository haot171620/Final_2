@model PhuTungXeMay2019.Models.Contact

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1 style="font-size:30px;">Tạo Thông Tin Liên Hệ</h1>
            <hr />
            @Html.ValidationSummary(true)
                <div class="form-group ">
                   <label>Họ Và Tên</label>
                   <input type="text" class="form-control"
                        @Html.EditorFor(model => model.tenNguoidung)
                        @Html.ValidationMessageFor(model => model.tenNguoidung)
                   
                </div>
                <div class="form-group">
                    <label>Tiêu Đề Liên Hệ</label>
                    <input type="text" class="form-control" 
                   
                        @Html.EditorFor(model => model.tenContact)
                        @Html.ValidationMessageFor(model => model.tenContact)
                   
                </div>

                <div class="form-group">
                    <label>Nội Dung Liên Hệ</label>
                    <textarea class="form-control")
                        @Html.TextAreaFor(model => model.noidungContact)
                        @Html.ValidationMessageFor(model => model.noidungContact)
                </div>
                <div class="form-group">
                    <label>Số Điện Thoại</label>
                    <input type="text" class="form-control" 
                        @Html.TextBoxFor(model => model.sdt)
                        @Html.ValidationMessageFor(model => model.sdt)
                </div>
                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
        </div>

    }
    <button name="button" type="button">
        <div>
            @Html.ActionLink("Hiện List Thông Tin Liên Hệ", "Index")
        </div>
    </button>
   
</body>

</html>
