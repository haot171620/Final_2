@model PhuTungXeMay2019.Models.CONTACT

@{
    ViewBag.Title = "Delete";
}
<html>
<div>
    <hr />
    <dl class="dl-horizontal">
        <head>
            <meta name="viewport" content="width=device-width" />
            <style type="text/css">
                .abc {
                    border: 3px solid black;
                }
            </style>
        </head>
        <body>
            <div class="slide_content_wrap">
                <b style="font-size:30px">Xóa Thông Tin Liên Hệ</b>
                <hr />
            </div>
            <div class="abc">

                <ul class="dl-horizontal">
                    <div style="font-size: 160%">
                        <div>
                            <b>Họ Và Tên: </b>
                            <a>
                                @Html.DisplayFor(model => model.tenNguoidung)
                            </a>
                        </div>
                        <div>
                            <b>Email:</b>
                            <a>
                                @Html.DisplayFor(model => model.tenContact)
                            </a>

                        </div>
                        <div>
                            <b>Số Điện Thoại:</b>
                            <a>
                                @Html.DisplayFor(model => model.sdt)
                            </a>
                        </div>
                        <div>
                            <b>Nội Dung Liên Hệ:</b>
                            <a>
                                @Html.DisplayFor(model => model.noidungContact)
                            </a>
                        </div>
                    </div>
                </ul>
            </div>
        </body>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            <button name="button" type="button">
                @Html.ActionLink("Quay lại List Contact", "Index")
            </button>

        </div>
    }
</div>
</html>
