@using PhuTungXeMay2019.Models;
@model List<Cart1>
@{
    ViewBag.Title = "View1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View1</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Loại sản phẩm</th>
            <th scope="col">Giá tiền</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Thành tiền</th>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Xóa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.tenSp</th>
                <th scope="row">@item.loaiSp</th>
                <th scope="row">@item.dongia</th>
                <th scope="row">@item.soluong</th>
                <th scope="row">@item.thanhTien</th>
                <th scope="row">
                    <img src=@Url.Content("~/QuanLiSanPham/Image/"+item.Idsp) style="width:60px; height: 60px" ;
                </th>
                <td class="product-remove">
                    <a href="#" class="remove" title="Remove this item">
                        @Html.ActionLink("Xóa", "DeleteCart", new { Idsp = item.Idsp })


                    </a>
                </td>
            </tr>
        }


    </tbody>
</table>

<div class="container">
    <div id="content">


        <!-- Cart Collaterals -->
       
            <a href="@Url.Action("Create","DonHang")">
                <input type="submit" value="Tiến hành đặt hàng" />
            </a>
      
        <div class="cart-collaterals">
            <div class="cart-totals pull-right">

                <div class="cart-totals-row"><h5 class="cart-total-title">Tổng giỏ hàng</h5></div>
                
                <div class="cart-totals-row"><span>Phí Ship:</span> <span>Miễn phí</span></div>
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- End of Cart Collaterals -->
        <div class="clearfix"></div>
    </div> <!-- #content -->
</div> <!-- .container -->